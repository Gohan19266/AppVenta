<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.framengts.Shop2Frament"
    android:background="#dadce0">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/carrito"
        android:textColor="@color/colorPrimaryText"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/textCarrito"/>
    <Button
        android:id="@+id/venda"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:onClick="venda"
        android:text="Vender"/>
    <View
        android:layout_width="match_parent"
        android:layout_below="@id/textCarrito"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorDivider"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_data_productoshop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="61dp"
        tools:listitem="@layout/productoshop_item"/>

    <TextView
        android:id="@+id/totalcompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_data_productoshop"
        android:layout_marginTop="-30dp"
        android:gravity="end|bottom"
        android:padding="1dp"
        android:text="total"
        android:textColor="@color/colorPrimaryText"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textpreciototal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_data_productoshop"
        android:layout_marginTop="-30dp"
        android:gravity="center"
        android:padding="1dp"
        android:text="Precio total : "
        android:textColor="@color/colorPrimaryText"
        android:textSize="18sp"
        android:textStyle="bold" />



</RelativeLayout>